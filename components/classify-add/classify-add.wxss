@import '/app.wxss';

.classify-add-wraper {
  z-index: 55;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 50rpx;
  width: 600rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 30rpx;
}

.classify-add-wraper .title {
  text-align: center;
  margin-top: 50rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ececec;
}

.classify-add-wraper .btns {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}
