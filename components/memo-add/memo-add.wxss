@import '/app.wxss';

.memo-add-wraper {
  z-index: 55;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 50rpx;
  width: 600rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 30rpx;
}

.memo-add-wraper .classify-picker .iconmanage {
  margin-right: 10rpx;
  font-size: 42rpx;
  color: #999;
}

.memo-add-wraper .title {
  margin-top: 50rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ececec;
}

.memo-add-wraper .btns {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}

.memo-add-wraper .btns .btn:first-child {
  margin-right: 50rpx;
}
