@import '/static/iconfont/iconfont.wxss';

view {
  box-sizing: border-box;
  font-size: 36rpx;
}

.hidden {
  visibility: hidden;
}

.mask {
  z-index: 50;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
}

.btn {
  margin: 0;
}

.btn.confirm {
  color: #fff;
  background-color: #1890ff;
  border: 1rpx solid #1890ff;
}

.btn.cancel {
  color: #999;
  background-color: #fff;
  border: 1rpx solid #ccc;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
