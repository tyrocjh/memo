<view class="home-page">
  <view class="header">
    <view class="header-l">
      <image src="{{defaultAvator}}"></image>
      <text>完善信息</text>
    </view>
    <view class="header-r">
      <view><text class="iconfont iconemail"></text></view>
      <view><text class="iconfont iconsetting"></text></view>
      <view><text class="iconfont iconhelp"></text></view>
    </view>
  </view>
  <view class="content">
    <view class="memo-list">
      <view class="memo-item" wx:for="{{memoList}}" wx:key="id">
        <text class="iconfont icontriangle"></text>{{item.name}}
      </view>
      <view class="memo-item"><text class="iconfont iconmanage"></text>模板管理</view>
      <view class="memo-item" bindtap="addClassify"><text class="iconfont iconplus"></text>创建分类</view>
      <view class="memo-item"><text class="iconfont iconfavorite"></text>我的收藏</view>
    </view>
  </view>
  <view class="add-btn" bindtap="addMemo"><text class="iconfont iconplus"></text></view>
  
  <!-- 分类创建弹窗 -->
  <classify-add visible="{{classifyAddVisible}}" bind:create="createClassify"></classify-add>
  <!-- 备忘录创建弹窗 -->
  <memo-add visible="{{memoAddVisible}}" classifyList="{{memoList}}"></memo-add>
</view>
