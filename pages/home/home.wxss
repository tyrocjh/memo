.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 50rpx;
  color: #fff;
  background-color: #1890ff;
}

.header .header-l {
  display: flex;
  align-items: center;
}

.header .header-l image {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .header-r {
  display: flex;
}

.header .header-r view {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
}

.header .header-r view .iconhelp {
  font-size: 30rpx;
}

.header .header-r view:last-child {
  margin-right: 0;
}

.content {
  padding: 20rpx 50rpx;
  color: #1890ff;
}

.memo-list .memo-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,.25);
}

.memo-list .memo-item .iconfont {
  margin-right: 30rpx;
  font-size: 40rpx;
}

.memo-list .memo-item .iconfont.iconmanage {
  font-size: 46rpx;
}

.memo-list .memo-item .icontriangle {
  margin-right: 30rpx;
  font-size: 40rpx;
  color: #bbb;
}

.add-btn {
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  background-color: #1890ff;
  border-radius: 50%;
}

.add-btn .iconplus {
  font-size: 60rpx;
  color: #fff;
}
