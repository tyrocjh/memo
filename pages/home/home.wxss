.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 50rpx;
  color: #fff;
  background-color: #1890ff;
}

.header .header-l {
  display: flex;
  align-items: center;
}

.header .header-l button {
  margin: 0;
  padding: 0;
  width: auto;
  color: #fff;
  background: transparent;
}

.header .header-l image {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .header-r {
  display: flex;
}

.header-r button {
  margin: 0;
  padding: 0;
  width: auto;
  height: 100%;
  line-height: 48rpx;
  color: #fff;
  background: transparent;
}

.header .header-r view {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
}

.header .header-r view .iconhelp {
  font-size: 30rpx;
}

.header .header-r view:last-child {
  margin-right: 0;
}

.content {
  padding: 20rpx 50rpx;
  color: #1890ff;
}

.memo-list .memo-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,.25);
}

.memo-list .memo-item .memo-item-head {
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
}

.memo-list .memo-item .memo-item-list {
  display: none;
  padding: 20rpx 0 0 80rpx;
}

.memo-list .memo-item .memo-item-list.show {
  display: block;
}

.memo-list .memo-item .memo-item-list .list-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  color: #999;
}

.memo-list .memo-item .memo-item-list .list-item text {
  padding-left: 15rpx;
}

.memo-list .memo-item .count {
  color: #999;
}

.memo-list .memo-item .iconfont {
  margin-right: 30rpx;
  font-size: 40rpx;
}

.memo-list .memo-item .icontriangle {
  display: inline-block;
  margin-right: 30rpx;
  font-size: 40rpx;
  color: #bbb;
}

.memo-list .memo-item .icontriangle.show {
  transform: rotate(90deg);
  transform-origin: 40% 50%;
}

.memo-list .memo-item .iconfont.iconmanage {
  font-size: 46rpx;
}

.add-btn {
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  background-color: #1890ff;
  border-radius: 50%;
}

.add-btn .iconplus {
  font-size: 60rpx;
  color: #fff;
}
